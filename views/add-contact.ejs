<div class="container mt-3">
    <div class="row">
    <div class="col-md-6">
    <h2>Form Tambah data Contact</h2>
    <% if (typeof errors !='undefined'){ %>
    <div class="alert alert-danger" role="alert">
    <ul>
    <% errors.forEach(error=>{ %>
    <li><%=
    error.msg %></li>
    <% }) %>
    </ul>
    </div>
    <% } %>
    <form method="POST" action="/contact">
    <div class="mb-3">
    <label for="inpNama" class="form-label">Nama Contact</label>
    <input type="text" class="form-control" id="inpNama"
    name="nama">
    </div>
    <div class="mb-3">
    <label for="inpNoHp" class="form-label">Nomor HP</label>
    <input type="text" class="form-control" id="inpNoHp"
    name="nohp">
    </div>
    <div class="mb-3">
    <label for="inpEmail" class="form-label">Email address</label>
    <input type="email" class="form-control" id="inpEmail"
    name="email">
    </div>
    <button type="submit" class="btn btn-primary">Tambah Data</button>
    </form>
    </div>
    </div>
    </div>